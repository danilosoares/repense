<div class="row">
    <div class="col-lg-12">
        <a href="/entities/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <header class="panel-heading">
                Permissões
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Slug</th>
                                <th>Controlador</th>
                                <th>Ação</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @entities.each do |entity| %>
                                <tr>
                                  <td><%= entity.name %></td>
                                  <td><%= entity.modules_category.name %></td>
                                  <td><%= entity.slug %></td>
                                  <td><%= entity.controller %></td>
                                  <td><%= entity.is_dev ? 'Sim' : 'Não' %></td>
                                  <td>
                                    <a href="/entities/<%=entity.id%>" class="btn btn-primary"><i class="fa fa-eye"></i></button></a>
                                    <a href="/entities/<%=entity.id%>/edit" class="btn btn-info"><i class="fa fa-pencil"></i></button></a>
                                    <a href="/entities/<%=entity.id%>" class="btn btn-danger" method="delete" data-confirm="Deseja Remover o Módulo?"><i class="fa fa-trash-o"></i></button></a>
                                  </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
