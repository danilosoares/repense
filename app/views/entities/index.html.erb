<div class="row">
    <div class="col-lg-12">
        <a href="/entities/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <header class="panel-heading">
                Permissões
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Slug</th>
                                <th>Controlador</th>
                                <th>Ação</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @entities.each do |entity| %>
                                <tr>
                                  <td><%= entity.name %></td>
                                  <td><%= entity.modules_category.name %></td>
                                  <td><%= entity.slug %></td>
                                  <td><%= entity.controller %></td>
                                  <td><%= entity.is_dev ? 'Sim' : 'Não' %></td>
                                  <td><%= link_to 'Visualizar', entity %></td>
                                  <td><%= link_to 'Editar', edit_entity_path(entity) %></td>
                                  <td><%= link_to 'Remover', entity, method: :delete, data: { confirm: 'Deseja Remover o Módulo?' } %></td>
                                </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
