<div class="row">
    <div class="col-lg-12">
        <a href="/modules_categories/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <header class="panel-heading">
                Usuários
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>                                
                                <th>Nome</th>
                                <th>Ícone</th>                                
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @modules_categories.each do |category| %>
                                <tr>
                                  <td><%= category.name %></td>
                                  <td><%= category.icon %></td>
                                  
                                  <td><%= link_to 'Visualizar', category %></td>
                                  <td><%= link_to 'Editar', edit_modules_category_path(category) %></td>
                                  <td><%= link_to 'Remover', modules_category, method: :delete, data: { confirm: 'Deseja Remover a Categoria de Módulos?' } %></td>
                                </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
