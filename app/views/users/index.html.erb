<div class="row">
    <div class="col-lg-12">
        <a href="/users/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <% if alert %>
              <div class="alert alert-block alert-danger fade in">
                  <%= alert %>
              </div>
            <% end %>
            <header class="panel-heading">
                Usuários
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Perfil</th>
                                <th>Nome</th>
                                <th>Admin</th>
                                <th>Representante</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                  <td><%= user.role.name %></td>
                                  <td><%= user.name %></td>
                                  <td><%= user.is_admin ? 'Sim' : 'Não' %></td>
                                  <td><%= user.is_representative ? 'Sim' : 'Não' %></td>
                                  <td><%= link_to 'Visualizar', user %></td>
                                  <td><%= link_to 'Editar', edit_user_path(user) %></td>
                                  <td><%= link_to 'Remover', user, method: :delete, data: { confirm: 'Deseja Remover o Usuário?' } %></td>
                                </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
