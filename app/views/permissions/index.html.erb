<div class="row">
    <div class="col-lg-12">
        <a href="/permissions/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <header class="panel-heading">
                Permissões
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Módulo</th>
                                <th>Ação</th>
                                <th>Nome da Ação</th>
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @permissions.each do |permission| %>
                                <tr>
                                  <td><%= permission.entity.name %></td>                                  
                                  <td><%= permission.action %></td>
                                  <td><%= permission.action_name %></td>
                                  <td>
                                    <a href="/permissions/<%=permission.id%>" class="btn btn-primary"><i class="fa fa-eye"></i></button></a>
                                    <a href="/permissions/<%=permission.id%>/edit" class="btn btn-info"><i class="fa fa-pencil"></i></button></a>
                                    <a href="/permissions/<%=permission.id%>" class="btn btn-danger" method="delete" data-confirm="Deseja Remover a Permissão?"><i class="fa fa-trash-o"></i></button></a>
                                  </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
