<div class="row">
    <div class="col-lg-12">
        <a href="/permissions/new">
            <button type="button" class="btn btn-primary">Adicionar</button>
        </a>
        <div class="panel"></div>
        <section class="panel">
            <% if notice %>
              <div class="alert alert-block alert-success fade in">
                  <%= notice %>
              </div>
            <% end %>
            <header class="panel-heading">
                Permissões
            </header>
            <div class="panel-body">
                <section id="unseen">
                    <table class="table table-bmoduleed table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Módulo</th>
                                <th>Rota</th>
                                <th>Ação</th>                                
                                <th colspan='3'>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @permissions.each do |permission| %>
                                <tr>
                                  <td><%= permission.entity.name %></td>
                                  <td><%= permission.route %></td>
                                  <td><%= permission.action_name %></td>                                  
                                  <td><%= link_to 'Visualizar', permission %></td>
                                  <td><%= link_to 'Editar', edit_permission_path(permission) %></td>
                                  <td><%= link_to 'Remover', permission, method: :delete, data: { confirm: 'Deseja Remover a Permissão?' } %></td>
                                </div>
                            <% end %>
                        </tbody>
                    </table>                     
                </section>
            </div>
        </section>
    </div>
</div>
